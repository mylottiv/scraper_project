<nav>
    <div class="nav-wrapper red accent-4">
        <a href="#" class="brand-logo right" style="font-style: bold;">NintendoNews</a>
        <ul id="nav-mobile" class="left hide-on-med-and-down">
            <li><a href="/">Home</a></li>
            <li class="active"><a href="/saved">Saved Articles</a></li>
            <li><a class="waves-effect waves-light btn-large white-text" style='border-radius:10px;' href="/api/clear"><span style='padding: 4px; border:4px solid white; border-radius:10px;'>Clear Articles!</span></a></li>
        </ul>
    </div>
</nav>
<div id='root' class='container'>
    <div class='row'>
        <div class='col s12'>
            <div class='row'>
                <h3>Freshly Scraped Articles:</h3>
            </div>
            {{#each article}}
            <div class='row'>
                <div class='card horizontal' style='height:183px;'>
                    <div class='card-image' style='width:250px; height:183px;'>
                        <img style='width:100%; height: 100%;' src='{{image}}' />
                    </div>
                    <div class='card-stacked'>
                        <div class='card-content' style='padding-top:0px; padding-left:12px'>
                            <div class='fixed-action-btn click-to-toggle' style='float: right; position: absolute; bottom:15px; left:0px;'>
                                <a class="btn-floating halfway-fab waves-effect waves-light red tooltipped"  data-position='bottom' data-tooltip='See actions'>
                                    <i class="material-icons">add</i>
                                </a>
                                <ul class='row'>
                                    <li class='tooltipped' data-position='bottom' data-tooltip='Delete Article'><a class='btn-floating waves-effect waves-light red'><i class="medium material-icons">delete_forever</i></a></li>
                                    <li class='tooltipped' data-position='bottom' data-tooltip='Add Comment'><a class='btn-floating waves-effect waves-light red'><i class="medium material-icons">note_add</i></a></li>
                                </ul>
                            </div>
                            <a href='http://nintendolife.com/{{link}}'><h6>{{title}}</h6></a>
                            <p style='padding-bottom:8px; font-style:italic;'>{{description}}</p>
                            <p>{{content}}</p>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>        